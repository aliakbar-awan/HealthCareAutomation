<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/childFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="F# 25"
        android:textColor="#C12626"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/childName"
        app:layout_constraintTop_toBottomOf="@+id/childName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/childName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Ali Akbar"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/childRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="S/O"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/childName"
        app:layout_constraintStart_toEndOf="@+id/childName"
        app:layout_constraintTop_toTopOf="@+id/childName" />

    <TextView
        android:id="@+id/childFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Muzaffar Khan"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/childRelation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/childRelation"
        app:layout_constraintTop_toTopOf="@+id/childRelation"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/childDob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="12/12/2020"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/childFamily"
        app:layout_constraintStart_toEndOf="@+id/childFamily"
        app:layout_constraintTop_toTopOf="@+id/childFamily" />

    <TextView
        android:id="@+id/childGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="M"
        android:textColor="#36A4E6"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/childDob"
        app:layout_constraintStart_toEndOf="@+id/childDob"
        app:layout_constraintTop_toTopOf="@+id/childDob" />

    <ImageView
        android:id="@+id/child_vaccination_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/childGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/childFname"
        app:srcCompat="@drawable/verified"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>