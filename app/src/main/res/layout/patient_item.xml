<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/custom_border">

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Ali Akbar"
        android:textColor="#49A3D8"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/patient_family"
        app:layout_constraintStart_toEndOf="@+id/patient_family"
        app:layout_constraintTop_toTopOf="@+id/patient_family" />

    <TextView
        android:id="@+id/fathers_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Muzaffar Khan"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/relation"
        app:layout_constraintStart_toEndOf="@+id/relation"
        app:layout_constraintTop_toTopOf="@+id/relation" />

    <TextView
        android:id="@+id/relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="S/O"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/patient_name"
        app:layout_constraintStart_toEndOf="@+id/patient_name"
        app:layout_constraintTop_toTopOf="@+id/patient_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/patient_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="F#6"
        android:textColor="#F7C51818"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patient_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Registered on: 12/02/2021"
        app:layout_constraintStart_toStartOf="@+id/reason_text"
        app:layout_constraintTop_toBottomOf="@+id/reason_text" />

    <TextView
        android:id="@+id/reason_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Reason: Temperature"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/patient_family"
        app:layout_constraintTop_toBottomOf="@+id/patient_family" />

    <Button
        android:id="@+id/patient_details"
        android:layout_width="95dp"
        android:layout_height="51dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Details"
        android:textColor="#100A0A"
        app:backgroundTint="#E3AB52"
        app:layout_constraintBottom_toBottomOf="@+id/patient_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toEndOf="@+id/patient_date"
        app:layout_constraintTop_toTopOf="@+id/reason_text"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>